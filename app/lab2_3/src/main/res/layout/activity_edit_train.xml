<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".EditActivity">

    <TextView
        android:id="@+id/id_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="24dp"
        android:text="ID"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/id_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/number_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Наименование: "
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/id_edit"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/number_edit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"

        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/number_caption"

        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/square_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="24dp"
        android:text="Площадь: "
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_edit"

        />

    <EditText
        android:id="@+id/square_edit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"

        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/square_caption"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/floor_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="24dp"
        android:text="Этаж: "
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/square_edit"

        />

    <EditText
        android:id="@+id/floor_edit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/floor_caption"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/floorCount_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="24dp"
        android:text="Количество комнат: "
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/floor_edit"

        />

    <EditText
        android:id="@+id/floorCount_edit"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:fontFamily="serif-monospace"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/floorCount_caption"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/street_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="24dp"
        android:text="Улица:"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/floorCount_edit"

        />

    <EditText
        android:id="@+id/street_edit"
        android:layout_width="102dp"
        android:layout_height="37dp"
        android:fontFamily="serif-monospace"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/street_caption"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/type_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="24dp"
        android:text="Тип здания: "
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/street_edit"

        />

    <EditText
        android:id="@+id/type_edit"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:fontFamily="serif-monospace"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/type_caption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_caption" />

    <TextView
        android:id="@+id/time_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="24dp"
        android:text="Срок эксплуа: "
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_edit"

        />

    <EditText
        android:id="@+id/time_edit_"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/time_caption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_edit" />

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_edit_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Сохранить"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Отмена"
            android:layout_margin="5dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>